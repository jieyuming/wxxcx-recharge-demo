.help-header{
  background: #29b228;
  padding: 20rpx;
  color: #fff;
  font-size: 34rpx;
}
.help-header-title{
  font-size: 40rpx;
  font-weight: bolder;
}
.help-header-txt{
  padding-top: 20rpx;
}
.help-content{
  padding: 40rpx 20rpx 60px;
}
.help-content-title{
  font-size: 40rpx;
  font-weight: bolder;
  padding-bottom: 20rpx;
}
.help-content-text{
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.help-content-txt{
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  color: #8c8c8c;
  padding: 20rpx 0; 
}
.login-button[plain]{
  padding: 0;
  margin: 0;
  border: none;
  color: #1a1a1a;
  line-height: 1;
}
.record-footer{
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  background: #fff;
  padding: 10rpx 0 10rpx;
  /* border-top: 1px solid #ccc; */
  z-index: 10;
}
.record-footer-item{
  flex: 1;
  display: flex;
  flex-direction:column;
  align-items: center;
  font-size: 36rpx;
}
.record-footer-item image{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}
.record-footer-alpha{
  display: flex;
  align-content: center;
  justify-content: center;
}
.record-footer-beta{
  font-size: 24rpx;
}