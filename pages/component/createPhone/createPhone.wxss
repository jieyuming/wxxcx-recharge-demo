/* pages/component/createPhone.wxss */

page {
  height: 100%;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.3);
  z-index: 2;
}

.toast-content {
  position: fixed;
  left: 50%;
  top: 50%;
  width: 300px;
  transform: translate(-50%, -50%);
  background: #fff;
  border-radius: 20rpx;
  z-index: 10;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.toast-content input{
  margin-bottom: 30rpx;
  text-align: center;
}
.toast-content-title {
  padding: 20rpx;
}

.toast-content-btn {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  border-top:1rpx solid #f5f5f5; 
}

.placeholder {
  text-align: center;
}

.toast-content-text {
  flex: 1;
  display: flex;
  justify-content: center;
}
.active{
  top: 30%;
}